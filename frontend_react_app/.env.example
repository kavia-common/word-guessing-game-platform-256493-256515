# Frontend runtime/build-time configuration for Word Guessing Game

# Build-time override for API base (with or without /api; the client will normalize to include /api)
# Example for local dev:
# REACT_APP_API_BASE=http://localhost:3001/api
REACT_APP_API_BASE=

# Optional backend URL references (not used directly by the client, but kept for consistency with container_env)
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=

# Misc build flags
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=true
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=false
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/api/health
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
